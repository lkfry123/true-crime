---
export interface Props {
  title?: string;
  description?: string;
}
const { title, description } = Astro.props as Props;
import '@/styles/global.css';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {title && <title>{title}</title>}
    {description && <meta name="description" content={description} />}
    {/* Consent Mode (place your CMP banner script immediately after this block) */}
    <script>
      {`// Define dataLayer and the gtag function.
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);} 

      // IMPORTANT â€” update regions list to your requirements (ISO 3166-2 codes)
      gtag('consent', 'default', {
        'ad_storage': 'denied',
        'ad_user_data': 'denied',
        'ad_personalization': 'denied',
        'analytics_storage': 'denied',
        'regions': [] // e.g., ['US-CA','US-CO','GB','DE','FR']
      });
      // Default for all other regions
      gtag('consent', 'default', {
        'ad_storage': 'denied',
        'ad_user_data': 'denied',
        'ad_personalization': 'denied',
        'analytics_storage': 'denied'
      });`}
    </script>
    {/* <!-- CMP banner script here --> */}
    {/* Google tag (gtag.js) */}
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-G6BV4CR368"></script>
    <script>
      {`window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);} 
      gtag('js', new Date());
      gtag('config', 'G-G6BV4CR368');`}
    </script>
  </head>
  <body>
    <header class="site-header">
      <div class="container inner">
        <a href="/">True Crime</a>
        <nav>
          <a href="/blog/">Blog</a>
          <a href="/tags/ed-gein/">#ed-gein</a>
        </nav>
      </div>
    </header>
    <main class="container">
      <slot />
    </main>
    <footer class="site-footer">
      <div class="container">
        <p>&copy; {new Date().getFullYear()} True Crime. All rights reserved.</p>
      </div>
    </footer>
  </body>
  
</html>


