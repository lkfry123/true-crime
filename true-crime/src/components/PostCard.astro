---
export interface Props {
  href: string;
  title: string;
  description?: string;
  date?: string;
  tags?: string[];
}
const { href, title, description, date, tags = [] } = Astro.props as Props;
---
<article class="card">
  <a href={href} style="text-decoration:none;">
    <h3>{title}</h3>
    {description && <p>{description}</p>}
    {date && <p style="color:var(--muted); font-size:.9rem;">{new Date(date).toLocaleDateString()}</p>}
    {tags.length > 0 && (
      <div class="tags">
        {tags.map((t) => <span class="tag">#{t}</span>)}
      </div>
    )}
  </a>
  
</article>


